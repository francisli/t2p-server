<%- contentFor('title') %>Login
<%- contentFor('bodyClass') %>signed-out
<%- contentFor('body') %>
<div class="container">
  <div class="row justify-content-center" role="main">
    <div class="col col-sm-10 col-md-8 col-lg-6">
      <img class="logo" src="/images/logo352.png">
      <div class="card">
        <h1>Login</h1>
        <form method="post" action="/login">
          <input type="hidden" name="redirectURI" value="<%= redirectURI %>" />
          <div class="form-group">
            <input type="text" class="form-control" name="email" placeholder="Email"/>
          </div>
          <div class="form-group">
            <input type="password" class="form-control" name="password" placeholder="Password"/>
            <div class="form-text text-right"><a href="/passwords/forgot">Forgot password?</a></div>
          </div>
          <div class="form-group">
            <button class="btn btn-primary btn-block" type="submit">Submit</button>
          </div>
          <div class="text-center">
            <a href="/register?redirectURI=<%= encodeURIComponent(redirectURI || '/') %>">Create an Account</a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
