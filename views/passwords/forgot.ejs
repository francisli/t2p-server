<%- contentFor('title') %>Forgot password?
<%- contentFor('bodyClass') %>signed-out
<%- contentFor('body') %>
<div class="container">
  <div class="row justify-content-center" role="main">
    <div class="col col-sm-10 col-md-8 col-lg-6">
      <img class="logo" src="/images/logo352.png">
      <div class="card">
        <h1>Forgot?</h1>
        <p>Enter the email address you registered with to receive a reset password link.</p>
        <form method="post" action="/passwords/forgot">
          <div class="form-group">
            <input type="text" class="form-control" name="email" placeholder="Email" />
          </div>
          <div class="form-group">
            <button class="btn btn-primary btn-block" type="submit">Submit</button>
          </div>
          <div class="form-group text-center">
            <a href="/login">Back to Login...</a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
